<!DOCTYPE html>
<html>

<head>
   <%- include('../templates/head') %>
   <!-- Icons Css -->
   <link href="./css/icons.min.css" rel="stylesheet" type="text/css" />
   <!-- App Css-->
   <link href="./css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
   <link rel='stylesheet' href='./stylesheets/style.css' />
</head>

<body data-topbar="dark">


    <div id="layout-wrapper">

        <header id="page-topbar">
            
             <%- include('../templates/dashboard-header') %>

        </header>

        <div class="main-content" style="margin-left: 0px;">

            <div class="page-content">

                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-8 form-container">

                        <h2 class="text-center">ADD API</h2>

                        <form class="form api_form" name="add_api" id="">

                            <div class="form-group row">
                                <input type="text" name="name" value="" data-selected="add_api"
                                    class="form-control api" placeholder="API Name" id="" autocomplete="off" required>
                            </div>


                             <div class="form-group row">
                                 <input type="url" name="url" value="" data-selected="add_api"
                                     class="form-control api" placeholder="API URL" id="" autocomplete="off" required>
                             </div>

                             <div class="form-group row">
                                 <input type="file" name="img" value="" id="image-icon" data-selected="add_api" class="form-control api"
                                     placeholder="API Image" autocomplete="off" required>
                             </div>


                              <div class="form-group row">
                                  <textarea type="text" name="desc" value="" data-selected="add_api"
                                      class="form-control api" placeholder="API description" id="" autocomplete="off" required></textarea>
                              </div>

                            <div class="form-group row">
                            <button data-formname="add_api" data-method="POST" data-url="/mylink"
                                class="btn btn-pry submit_now mx-auto btn-block" id="add_api_btn">Add API</button>
                            <button class="btn btn-pry mx-auto loading hide_button btn-block" id="add_api_loader">
                                <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                                <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                                <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                        </form>

                    </div>

                </div>


            </div>

        </div>

        


          <footer class="footer" style="left: 0;">
              <div class="container-fluid">
                  <div class="row">
                      <div class="col-sm-6">
                          <script>
                              document.write(new Date().getFullYear())
                          </script> Â© Micro API.
                      </div>
                      <div class="col-sm-6">
                          <div class="text-sm-right d-none d-sm-block">
                              Design & Develop by HNGi7
                          </div>
                      </div>
                  </div>
              </div>
          </footer>
    </div>


    <!-- JAVASCRIPT -->
    <script src="./libs/jquery/jquery.min.js"></script>
    <script src="./libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="./js/form.js"></script>

</body>